<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plague</title>
    <link rel="shortcut icon" href="/assets/logo.ico">
    <link rel="stylesheet" href="/styles/Login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0">
  </head>
  <body>

    <!-- Loading -->
    <div class="loader-wrapper">
      <span class="loader"></span>
    </div>
  

    <!-- Main Sites -->

    <div class="hero-section">
        <div class="login-panel">
            <h2 class="login-text">Login</h2>
            <form method="post" action="/login">
                <div class="form-group">
                    <input type="password" id="key" name="key" placeholder="Key">
                </div>
                <div class="cf-turnstile" data-sitekey="0x4AAAAAAAVKUXDNLPlhvOKK"></div>
                <button class="login-button" type="submit">Login</button>
            </form>
        </div>
        <div class="login-error">
          <% if (typeof errorMessage !== 'undefined') { %>
            <p style="color: red;"><%= errorMessage %></p>
        <% } %>
        </div>
    </div>



    <!-- NEED TO PUT BEFORE HERO SECTION -->
    <header>
      <nav class="navbar">
        <a class="logo" href="/">Plague</a>
        <ul class="menu-links">
          <span id="close-menu-btn" class="material-symbols-outlined">close</span>
          <li><a href="/login">Login</a></li>
          <li><a href="https://github.com/DrEmoji">Github</a></li>
        </ul>
        <span id="mobilemenu-btn" class="material-symbols-outlined">menu</span>
      </nav>
    </header>

    <footer>
      <p>&copy; 2024 Plague. All rights reserved.</p>
    </footer>

    <script>
      $(window).on("load", function() {
        $(".loader-wrapper").fadeOut("slow");
      });
      const header = document.querySelector("header");
      const mobilemenuBtn = document.querySelector("#mobilemenu-btn");
      const closeMenuBtn = document.querySelector("#close-menu-btn");

      mobilemenuBtn.addEventListener("click", () => header.classList.toggle("show-mobile-menu"));

      closeMenuBtn.addEventListener("click", () => mobilemenuBtn.click());
    </script>
    <video autoplay loop muted id="background-video">
        <source src="assets/BG.mp4" type="video/mp4">
    </video>
  </body>
</html>